menubar mainMenu 'GenAn' @home:
	    menu Views:
            'Table' @table_page
            'Thumbnail' @thumbnail_page
            'List' @list_page
	    ;

	    menu Groups:
            'Group form' @group_form_page
            'Table of groups' @group_table_page
            'Thumbnails of groups' @group_thumbnail_page
            'List of groups' @group_list_page
